scalar DateTime

schema {
    query: Query
    mutation: Mutation
}

type Query {
    user: User!
}

type Mutation {
    createAccount(username: String!, password: String!): User!
    deleteAccount: Boolean!
    generatePairCode: Code!
    revokePairCode(code: String!): Boolean!
    acceptPairCode(code: String!): Boolean!
}

type User {
    id: ID!
    username: String!
    createdAt: DateTime!

    pair: User
}

type Code {
    code: String!
    expires: DateTime!
}
